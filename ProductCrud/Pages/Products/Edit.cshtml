@page
@model ProductCrud.Pages.Products.EditModel
@{
    ViewData["Title"] = "Edit";
}


<h2>Edit</h2>
<h5>Product</h5>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" class="form-control" asp-for="Product.Id">

            <div class="mb-3 row">
                <label for="Name" class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="Product.Name">
                </div>
            </div>

            <div class="mb-3 row">
                <label for="Category" class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="Product.Category">
                </div>
            </div>

            <div class="mb-3 row">
                <label for="Description" class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="Product.Description">
                </div>
            </div>

             <div class="mb-3 row">
                <label for="Price" class="col-sm-4 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" asp-for="Product.Price">
                </div>
            </div>
            
            <input type="submit" value="Update" class="btn btn-primary mb-3" />
            
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
